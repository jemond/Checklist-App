!!!
%html

	%head
		%title= h yield(:title)
		= stylesheet_link_tag 'common','app', 'grid'
		= javascript_include_tag 'jquery', 'jquery-ui', 'rails', 'application'
		= csrf_meta_tag

%body
	
	#header
		.container_12.clearfix
			.grid_6
				%h1= link_to 'Checklist App', :action => 'index', :controller => '/checklists'
		
			.grid_6.textright
				#navigation
					- if user_signed_in?
						#user_login_box{:style=>"float:right"}
							= link_to current_user.email, edit_user_registration_path, :title=>'Account settings'
							|
							= link_to 'Logout', destroy_user_session_path, :title=>'Later!'

.container_12
	= yield