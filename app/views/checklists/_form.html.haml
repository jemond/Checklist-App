= form_for(@checklist) do |f|
	- if @checklist.errors.any?
		#error_explanation
		%h2
			= pluralize(@checklist.errors.count, "error")
			prohibited this checklist from being saved:
	
		%ul
		- @checklist.errors.full_messages.each do |msg|
			%li= msg

	.field
		= f.label :title 
		%br
		= f.text_field :title
	
	.field
		= f.label :list
		%br
		= f.text_area :list
	
	.actions
		= f.submit